# DeepRacer System Environment Configuration
# Generated for: {{ model_name }} on {{ deployment_target }}
# Cloud Platform: {{ cloud }}
# S3 Bucket: {{ s3_bucket }}
# Created: {{ timestamp }}

# Cloud and Region Configuration
DR_CLOUD=local
DR_AWS_APP_REGION={{ region }}
DR_UPLOAD_S3_PROFILE=default
DR_UPLOAD_S3_BUCKET={{ s3_bucket }}
DR_UPLOAD_S3_ROLE={{ aws_dr_bucket_role }}
DR_LOCAL_S3_BUCKET={{ s3_bucket }}
DR_LOCAL_S3_PROFILE={{ local_s3_profile }}

# GUI and Display Configuration
DR_GUI_ENABLE=True
DR_HOST_X=True
DR_DISPLAY=:99

# Streaming and Camera Configuration
DR_KINESIS_STREAM_NAME={{ kinesis_stream_name }}
DR_CAMERA_MAIN_ENABLE=True
DR_CAMERA_SUB_ENABLE=True
DR_CAMERA_KVS_ENABLE=True
DR_ENABLE_EXTRA_KVS_OVERLAY=False

# Container Configuration
DR_SIMAPP_SOURCE=awsdeepracercommunity/deepracer-simapp
DR_SIMAPP_VERSION={{ simapp_version_tag }}
DR_MINIO_IMAGE=latest
DR_ANALYSIS_IMAGE=cpu

# Worker Configuration
DR_WORKERS=4

# Mount and Log Configuration
DR_ROBOMAKER_MOUNT_LOGS=True
# DR_ROBOMAKER_MOUNT_SIMAPP_DIR=
# DR_ROBOMAKER_MOUNT_SCRIPTS_DIR=${DR_DIR}/data/scripts

# Monitoring Configuration
DR_CLOUD_WATCH_ENABLE=False
DR_CLOUD_WATCH_LOG_STREAM_PREFIX=

# Docker and CUDA Configuration
DR_DOCKER_STYLE={{ docker_style }}
DR_WEBVIEWER_PORT=8100

# CUDA Device Configuration
DR_ROBOMAKER_CUDA_DEVICES=0
DR_SAGEMAKER_CUDA_DEVICES=0

# Optional Remote and Monitoring Configuration
# DR_REMOTE_MINIO_URL=http://mynas:9000
# DR_TELEGRAF_HOST=telegraf
# DR_TELEGRAF_PORT=8092
